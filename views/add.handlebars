      <div class="form-group">
        <label for="username-input">Artist Name</label>
        <input type="text" class="form-control form-input" id="artist-name-input" placeholder="Iron Butterfly">
      </div>
      <div class="form-group">
        <label for="username-input">Album Name</label>
